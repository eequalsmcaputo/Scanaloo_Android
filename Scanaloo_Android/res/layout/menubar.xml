<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#E9672C"
	android:gravity="right">
    
    <Button
		android:layout_margin="10dp"
		android:id="@+id/btnHome"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="@drawable/icon_home_blue" />
    
	<LinearLayout
	    android:id="@+id/lytHome"
		android:layout_width="76dp"
		android:layout_height="15dp"
		android:background="@drawable/logo"
		android:layout_marginRight="90dp"
		android:layout_marginTop="15dp"/>

	<!-- Extra button to make clicking easier -->
	
	<LinearLayout
		android:layout_margin="10dp"
		android:id="@+id/lytNewLoop"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="#E9672C"/>

	<Button
		android:layout_margin="10dp"
		android:id="@+id/btnNewLoop"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:background="@drawable/icon_home_off"/>

</LinearLayout>